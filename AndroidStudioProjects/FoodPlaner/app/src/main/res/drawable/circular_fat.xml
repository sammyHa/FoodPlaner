<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress" >
        <shape

            android:innerRadiusRatio="5"
            android:shape="ring"
            android:thicknessRatio="30.0"
            android:useLevel="true" >
            <!--<stroke android:width="2.5dp"-->
            <!--android:color="#7CC7F6"-->
            <!--/>-->


            <gradient
                android:centerColor="#7510B498"
                android:endColor="#7510B498"
                android:startColor="#7510B498"
                android:type="sweep"
                />

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="5"
                android:shape="ring"
                android:thicknessRatio="30.0"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="270"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="#10B498"
                    android:endColor="#10B498"
                    android:startColor="#10B498"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>


</layer-list>