<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress" >
        <shape

            android:innerRadiusRatio="5"
            android:shape="ring"
            android:thicknessRatio="30.0"
            android:useLevel="true" >
            <!--<stroke android:width="2.5dp"-->
                <!--android:color="#7CC7F6"-->
                <!--/>-->


            <gradient
                android:centerColor="#7500B3FF"
                android:endColor="#7500B3FF"
                android:startColor="#7500B3FF"
                android:type="sweep"
                />

        </shape>
    </item>

    <item android:id="@android:id/progress">
    <rotate
        android:fromDegrees="270"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="270">

        <shape
            android:innerRadiusRatio="5"
            android:shape="ring"
            android:thicknessRatio="30.0"
            android:useLevel="true">


            <rotate
                android:fromDegrees="270"
                android:pivotX="50%"
                android:pivotY="50%"
                android:toDegrees="360" />

            <gradient
                android:centerColor="#00B3FF"
                android:endColor="#00B3FF"
                android:startColor="#00B3FF"
                android:type="sweep" />

        </shape>
    </rotate>
</item>

    
</layer-list>