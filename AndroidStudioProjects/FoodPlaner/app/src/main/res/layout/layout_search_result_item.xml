<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

<RelativeLayout
    android:id="@+id/contatainer_food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

            <TextView
                android:id="@+id/search_result_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rib Eye Steak"
                android:maxLines="1"
                android:maxLength="40"
                android:layout_toStartOf="@id/search_item_cal_count"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                tools:textColor="#000000" />

            <TextView
                android:id="@+id/search_item_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sam's, 1.3 lb(s)"
                android:layout_below="@id/search_result_food_name"
                />

            <TextView
                android:id="@+id/search_item_cal_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:text="1,321" />
</RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/contatainer_food"
        android:layout_marginTop="5dp"
        android:background="@color/black_70"
        android:layout_centerVertical="true"

        />


</RelativeLayout>