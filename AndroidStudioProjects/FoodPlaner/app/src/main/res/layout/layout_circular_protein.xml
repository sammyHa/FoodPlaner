<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/gradient_pager_background"
    >


    <ProgressBar
        android:id="@+id/circularCarbsProgressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentStart="true"
        android:indeterminate="false"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/circular_protein"
        android:secondaryProgress="100" />
    <TextView
        android:id="@+id/textprotein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Protein"
        android:textColor="@color/buttonTextWhiteColor"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/textview_oneside_raduis"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/tv_carbs_percentage_consumed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="4dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/buttonTextWhiteColor"
        />

    <TextView
        android:id="@+id/tv_carbs_consumed_grams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="150 / 300g"
        android:textColor="@color/buttonTextWhiteColor"
        android:textSize="12sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_carbs_percentage_consumed"
        />

</RelativeLayout>